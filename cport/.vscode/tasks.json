{
    "label": "build",
    "type": "shell",
    "command": "gcc",
    "args": [
        "-std=c17",
        "-Wall",
        "-Wextra",
        "-Wpedantic",
        "-Werror",
        "main.c",
        "task.c",
        "task_repo.c",
        "cmd_handler.c",
        "test_task_repo.c",
        "-g",
        "-o",
        "main.exe"
    ],
    "options": {
        "cwd": "${workspaceFolder}"
    },
    "group": {
        "kind": "build",
        "isDefault": true
    }
}
